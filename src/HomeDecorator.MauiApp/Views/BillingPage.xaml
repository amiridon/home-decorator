<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HomeDecorator.MauiApp.Views.BillingPage"
             Title="Billing">

    <Grid RowDefinitions="Auto,Auto,*,Auto">
        <!-- Header with credit status -->
        <Frame Grid.Row="0"
                Margin="15"
                Padding="20"
                BackgroundColor="#f0f8ff"
                BorderColor="#007AFF">
            <StackLayout>
                <Label Text="Credits Available"
                        FontSize="14"
                        TextColor="#555555"/>
                <Label x:Name="CreditsLabel"
                        Text="150 credits"
                        FontSize="28"
                        FontAttributes="Bold"
                        TextColor="#007AFF"/>
                <Label Text="Last updated: May 19, 2025"
                        FontSize="12"
                        TextColor="#888888"/>
            </StackLayout>
        </Frame>

        <!-- Credit pack options -->
        <Label Grid.Row="1"
                Text="Purchase Credit Packs"
                FontSize="20"
                Margin="15,0,15,0"
                FontAttributes="Bold"/>

        <ScrollView Grid.Row="2"
                Margin="15,0">
            <StackLayout Spacing="15"
                    Padding="0,10">
                <!-- Credit Pack 1 -->
                <Frame BorderColor="#dddddd"
                        Padding="15"
                        HasShadow="True">
                    <Grid ColumnDefinitions="*, Auto">
                        <StackLayout Grid.Column="0">
                            <Label Text="Starter Pack"
                                    FontSize="18"
                                    FontAttributes="Bold"/>
                            <Label Text="50 credits"
                                    TextColor="#555555"/>
                            <Label Text="Perfect for trying out the application"
                                    TextColor="#888888"/>
                        </StackLayout>
                        <Button Grid.Column="1"
                                Text="$4.99"
                                BackgroundColor="#007AFF"
                                TextColor="White"
                                FontAttributes="Bold"
                                Padding="15,5"
                                Clicked="OnStandardPackClicked"/>
                    </Grid>
                </Frame>

                <!-- Credit Pack 2 -->
                <Frame BorderColor="#dddddd"
                        Padding="15"
                        HasShadow="True">
                    <Grid ColumnDefinitions="*, Auto">
                        <StackLayout Grid.Column="0">
                            <Label Text="Standard Pack"
                                    FontSize="18"
                                    FontAttributes="Bold"/>
                            <Label Text="200 credits"
                                    TextColor="#555555"/>
                            <Label Text="Our most popular option"
                                    TextColor="#888888"/>
                        </StackLayout>
                        <Button Grid.Column="1"
                                Text="$14.99"
                                BackgroundColor="#007AFF"
                                TextColor="White"
                                FontAttributes="Bold"
                                Padding="15,5"
                                Clicked="OnStandardPackClicked"/>
                    </Grid>
                </Frame>

                <!-- Credit Pack 3 -->
                <Frame BorderColor="#dddddd"
                        Padding="15"
                        HasShadow="True">
                    <Grid ColumnDefinitions="*, Auto">
                        <StackLayout Grid.Column="0">
                            <Label Text="Premium Pack"
                                    FontSize="18"
                                    FontAttributes="Bold"/>
                            <Label Text="500 credits"
                                    TextColor="#555555"/>
                            <Label Text="Best value for power users"
                                    TextColor="#888888"/>
                        </StackLayout>
                        <Button Grid.Column="1"
                                Text="$29.99"
                                BackgroundColor="#007AFF"
                                TextColor="White"
                                FontAttributes="Bold"
                                Padding="15,5"
                                Clicked="OnPremiumPackClicked"/>
                    </Grid>
                </Frame>

                <!-- Credit Pack 4 -->
                <Frame BorderColor="#dddddd"
                        Padding="15"
                        HasShadow="True">
                    <Grid ColumnDefinitions="*, Auto">
                        <StackLayout Grid.Column="0">
                            <Label Text="Professional Pack"
                                    FontSize="18"
                                    FontAttributes="Bold"/>
                            <Label Text="1200 credits"
                                    TextColor="#555555"/>
                            <Label Text="For interior design professionals"
                                    TextColor="#888888"/>
                        </StackLayout>
                        <Button Grid.Column="1"
                                Text="$59.99"
                                BackgroundColor="#007AFF"
                                TextColor="White"
                                FontAttributes="Bold"
                                Padding="15,5"
                                Clicked="OnProPackClicked"/>
                    </Grid>
                </Frame>
            </StackLayout>
        </ScrollView>

        <!-- Footer with subscription info -->
        <Frame Grid.Row="3"
                Margin="15"
                Padding="15"
                BackgroundColor="#f7f7f7">
            <StackLayout>
                <Label Text="Subscription Options"
                        FontAttributes="Bold"/>
                <Label Text="Manage your subscription and billing details"
                        TextColor="#555555"/>
                <Button Text="Billing Portal"
                        Margin="0,10,0,0"
                        BackgroundColor="#555555"
                        TextColor="White"
                        Clicked="OnBillingPortalClicked"/>
            </StackLayout>
        </Frame>
    </Grid>
</ContentPage>
